<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" prefHeight="780.0" prefWidth="850.0"
            stylesheets="@../css/QCUNewReport.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.controllers.QCUDoneReportController">

    <content>
        <VBox spacing="20">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <!-- HEADER -->
            <VBox fx:id="headerSection" alignment="CENTER" prefWidth="800.0" spacing="10">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ImageView fx:id="logo" fitHeight="117.0" fitWidth="110.0" preserveRatio="true">
                        <image>
                            <Image url="@../images/belmanlogo.png"/>
                        </image>
                    </ImageView>
                    <Label fx:id="title" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="QCU Report">
                        <HBox.margin>
                            <Insets left="190.0"/>
                        </HBox.margin>
                    </Label>
                    <Label fx:id="title1" layoutX="320.0" layoutY="51.0" prefHeight="36.0" prefWidth="45.0"
                           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                </HBox>
                <Label fx:id="orderNumberLabel" style="-fx-font-size: 16px;" text="ORDER NUMBER: ???????"/>
            </VBox>

            <!-- PAGE 1 (Photos Section) -->
            <VBox alignment="TOP_CENTER" spacing="20">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Photo Section"/>
                <TilePane fx:id="photoTile" alignment="CENTER" hgap="20" maxWidth="800" prefTileHeight="220"
                          prefTileWidth="200" prefWidth="800" vgap="20"/>
                <VBox fx:id="generalCommentSection" alignment="TOP_LEFT" prefHeight="200" spacing="10"
                      style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #d3d3d3; -fx-border-width: 1;">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="QCU Comments:"/>
                    <Label fx:id="generalCommentsLabel" style="-fx-font-size: 14px;" wrapText="true"/>
                </VBox>
            </VBox>

            <!-- COMMENTS & BUTTONS -->
            <VBox fx:id="commentSection" alignment="CENTER" prefHeight="250" prefWidth="800.0" spacing="10">

                <!-- Email Input Field -->
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Send Email to:"/>
                    <TextField fx:id="emailField" promptText="Enter email address" prefWidth="300"/>
                </HBox>

                <!-- Action Buttons -->
                <GridPane alignment="CENTER" hgap="20">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <children>
                        <Button fx:id="goBackButton" onAction="#handleGoBack" prefHeight="35" prefWidth="127" text="← BACK" GridPane.columnIndex="0" GridPane.halignment="LEFT" />
                        <Button id="sendEmailButton" fx:id="sendEmailButton" onAction="#handleSendEmail" prefHeight="35" prefWidth="150" text="SEND EMAIL" textFill="white" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
                        <Button id="savePDFButton" fx:id="savePdfButton" onAction="#handleSavePdf" prefHeight="35" prefWidth="158.0" text="SUBMIT REPORT" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
                    </children>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </VBox>
        </VBox>
    </content>
</ScrollPane>
